<div class="container-fluid well">
  <div class="col-lg-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Profile: <%= current_user.email%></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="btn-pref btn-group btn-group-justified btn-group-lg col-sm-4" role="group" aria-label="...">
              <div class="btn-group" role="group">
                <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                  <div class="hidden-xs">Tweets: <%= current_user.tweets.size %></div>
                </button>
              </div>
              <div class="btn-group" role="group">
                <button type="button" id="followers" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                  <div class="hidden-xs">Following: <%= current_user.following.size %></div>
                </button>
              </div>
              <div class="btn-group" role="group">
                <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                  <div class="hidden-xs">Following: <%= current_user.followers.size %></div>
                </button>
              </div>
          </div>
        </div>
        <br/>
        <div class="row">
          <div class="col-md-4" style="padding-bottom:0">
            <form accept-charset="UTF-8" action="/tweets" method="POST">
              <textarea class="field" id="message" name="message"
                        placeholder="Type in your message" rows="5" cols="40"></textarea>
              <button class="btn btn-info" type="submit">Post Tweet</button>
            </form>
          </div>
        </div>
      </div>
      <div class="panel-footer"><%= link_to('Logout', destroy_user_session_path, :method => :delete, class: 'btn btn-info') %> </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Feed</h3>
      </div>
      <div class="panel-body">
        <%= will_paginate @feed_items %>
      </div>
    </div>
  </div>
</div>